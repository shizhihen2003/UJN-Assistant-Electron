{
  "name": "ujn-assistant",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "author": {
    "name": "chenxin",
    "email": "shizhihen2003@163.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "vite --mode electron",
    "electron:build": "vite build --mode electron && electron-builder",
    "electron:build:win": "vite build --mode electron && electron-builder --win",
    "electron:build:linux": "vite build --mode electron && electron-builder --linux",
    "electron:build:all": "vite build --mode electron && electron-builder -mwl"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.2.5",
    "electron-store": "^8.1.0",
    "element-plus": "^2.5.3",
    "form-data": "^4.0.0",
    "highlight.js": "^11.11.1",
    "jsbn": "^1.1.0",
    "jsencrypt": "^3.3.2",
    "marked": "^15.0.11",
    "node-fetch": "^2.6.7",
    "vue": "^3.5.13",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "electron": "^35.0.3",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^3.2.0",
    "sass": "^1.71.0",
    "vite": "^6.2.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-vue-devtools": "^7.7.2"
  },
  "build": {
    "appId": "com.ujn.assistant",
    "productName": "UJN Assistant",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "build/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icons",
      "category": "Education",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": true
    }
  }
}
